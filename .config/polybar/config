# ##########################################
[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = false
icon-0 = Workshop;
icon-1 = Entertainment;
format = <label-state>
label-active = %icon%
label-active-foreground = ${colors.accent}
label-active-background = ${xrdb:color0}
label-active-underline = ${colors.accent}
label-active-padding = 3
label-empty = %icon%
label-empty-padding = 3
label-empty-foreground = ${colors.text}
label-occupied = %icon%
label-occupied-foreground = ${colors.accent}
label-occupied-background = ${xrdb:color0}
label-occupied-padding = 3
label-urgent = %icon%
label-urgent-foreground = ${xrdb:color5}
label-urgent-padding = 3

[module/title]
type = internal/xwindow
format-padding = 1
label = "%title:0:30:...%"
label-maxlen = 30

[module/date]
type = internal/date
interval = 1
date = "%e %b,"
date-alt = "%e %B %Y,"
time = "%H:%M"
time-alt = "%H:%M:%S"
format-prefix = " "
format-prefix-foreground = ${colors.accent}
  # use gsimplecal (calendar applet)
  # label =%{A3:gsimplecal & disown:}%date% %time%%{A} %{A}
label = %date% %time%
label-foreground = ${colors.text}
format-padding = 0

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = false
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted-foreground = ${colors.accent}
format-muted = <label-muted>
label-volume = %percentage%%
label-muted = 
ramp-volume-foreground = ${colors.accent}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format-prefix = " "
format-prefix-foreground = ${colors.accent}
format = <label-layout> <label-indicator>
label-layout = %icon%
label-indicator = %icon%
layout-icon-0 = ru;Ru
layout-icon-1 = us;En
indicator-icon-0 = caps lock;;+
format-padding = 0

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.accent}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.accent}
label = %mb_used% | %mb_free%

[module/battery]
type = internal/battery
full-at = 97
battery = BAT0
poll-interval = 5
ramp-capacity-foreground = ${colors.accent}
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Fully charged
ramp-capacity-4 = 
ramp-capacity-3 = 
ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 
