[colors]
background = ${xrdb:background}
foreground = #FFFFFF
accent = #798BC7
text = #9BAEC8

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0


# //////////////////////////////////////
[bar/top]
width = 100%
height = 22
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true
bottom = false
locale = ru_RU.UTF-8

background = ${colors.background}
foreground = ${colors.text}

line-size = 1
line-color = #0f0

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 5
module-margin-right = 0

font-0 = "Ubuntu:style=Bold:size=8:antialias=false;2"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=12;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=12;2"
font-3 = "Font Awesome 5 Brands:pixelsize=12;2"
font-4 = "Hack:pixelsize=8:antialias=false;2"

modules-left = app
modules-center = date pulseaudio xkeyboard
modules-right = cpu memory battery pwrmng

cursor-click = pointer
cursor-scroll = ns-resize

override-redirect = false
enable-ipc = true

# ##########################################
[module/app]
type = custom/text
content = %{A3:rofi -show run -location 1 -xoffset 15 -yoffset 39 -line-padding 4 -columns 1 -width 25 -lines 10 -padding 15 & disown:}%{A}
content-foreground = ${colors.accent}
content-background = ${xrdb:color0}
content-padding = 3 

[module/pwrmng]
type = custom/text
content = "     "
content-foreground = ${colors.accent}
content-background = ${xrdb:color0}
click-left = shutdown -h now
click-right = systemctl suspend
# click-middle = reboot

[module/date]
type = internal/date
interval = 1
date = "%e %b,"
date-alt = "%e %B %Y,"
time = "%H:%M"
time-alt = "%H:%M:%S"
format-prefix = " "
format-prefix-foreground = ${colors.accent}
label =%{A3:gsimplecal & disown:}%date% %time%%{A}
label-foreground = ${colors.text}
format-padding = 0

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = false
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted-foreground = ${colors.accent}
format-muted = <label-muted>
label-volume = %percentage%%
label-muted = 
ramp-volume-foreground = ${colors.accent}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-right = pavucontrol

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format-prefix = " "
format-prefix-foreground = ${colors.accent}
format = <label-layout> <label-indicator>
label-layout = %icon%
label-indicator = %icon%
layout-icon-0 = ru;Ru
layout-icon-1 = us;En
indicator-icon-0 = caps lock;;+
format-padding = 0

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.accent}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.accent}
label = %mb_used%

[module/battery]
type = internal/battery
full-at = 97
battery = BAT0
poll-interval = 5
ramp-capacity-foreground = ${colors.accent}
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Макс.
ramp-capacity-4 = 
ramp-capacity-3 = 
ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 
